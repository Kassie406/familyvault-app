DATABASE_URL="file:./dev.db"

# App
PORT=5050
APP_URL="http://localhost:5050"

# Session / JWT
SESSION_SECRET="change_me_super_random_64_chars"

# Email (SendGrid) - Get your API key from https://sendgrid.com
SENDGRID_API_KEY="your_sendgrid_api_key_here"
EMAIL_FROM="your_verified_sender@gmail.com"
FROM_EMAIL="your_verified_sender@gmail.com"

# JWT Secret for session tokens
JWT_SECRET="your_super_secret_jwt_key_change_this_in_production"

# SMS (Twilio) - Get credentials from https://twilio.com
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_FROM="+1234567890"
TWILIO_FROM_NUMBER="+1234567890"

# Prisma Engine (for Windows file lock issue)
PRISMA_CLIENT_ENGINE_TYPE=library
PRISMA_CLI_QUERY_ENGINE_TYPE=library

# ICE Sharing
ICE_JWT_SECRET=change_me_to_a_secure_random_string
